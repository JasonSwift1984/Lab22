@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>

<!--taking in required fields step 2-->

<form asp-controller="Home" asp-action="Registered">
    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" name="username" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="text" class="form-control" name="password" />
    </div>

    <div class="form-group">
        <label>Confirm Password</label>
        <input type="text" class="form-control" name="confirm" />
    </div>

    <div class="form-group">
        <label>Phone</label>
        <input type="text" class="form-control" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" />
    </div>

    <div class="form-group">
        <label>Age</label>
        Younger than 18:<input type="checkbox" class="form-control" name="age" />
        Older than 18:<input type="checkbox" class="form-control" name="age" />
    </div>

    <div class="form-group">
        <label>Favorite Color</label>
        Red:<input type="radio" class="form-control" name="favoritColor" />
        Black:<input type="radio" class="form-control" name="favoritColor" />
        Blue:<input type="radio" class="form-control" name="favoritColor" />
        Other:<input type="radio" class="form-control" name="favoritColor" />
    </div>

    <div class="form-group">
        <input type="submit" class="form-control" btn btn-primary />
    </div>
</form>